<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#e0d7d1"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:id="@+id/applogo"
            app:srcCompat="@drawable/logo"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="130dp"
            >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cinzel"

                android:text="Artwork Title"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cinzel"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Artwork Date"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/artistNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:fontFamily="@font/cinzel"
        android:text="Artist Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artistCountryAndYearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cinzel"
        android:text="Artist Country and Year"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/artworkImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="Artwork Image"
        android:scaleType="centerCrop"
        android:src="@drawable/bwlions" />

    <TextView
        android:id="@+id/departmentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:fontFamily="@font/cinzel"
        android:text="Department"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/galleryTitleTextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cinzel"

        android:layout_height="wrap_content"
        android:text="Gallery Title"/>

    <ImageView
        android:id="@+id/galleryIconImageView"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/external_link"/>

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:fontFamily="@font/cinzel"
        android:text="Location"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/typeAndMediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/cinzel"
        android:text="Artwork Type and Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dimensionsTextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:fontFamily="@font/cinzel"
        android:layout_height="wrap_content"
        android:text="Dimensions"/>

    <TextView
        android:id="@+id/creditLineTextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:fontFamily="@font/cinzel"
        android:layout_height="wrap_content"
        android:text="Credit Line"/>

</LinearLayout>